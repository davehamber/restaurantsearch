{% extends 'RestaurantSearchBundle:Default:page_with_nav_and_login_bar.html.twig' %}
{% block title %}Restaurant Search{% endblock %}
{% block page_content %}
    {% include 'RestaurantSearchBundle:Security:fbscript.html.twig' %}

    <div class="container">
        {% if error %}
            <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h3>Log in</h3>
                <h4>Not registered yet? <a href="{{ path('fos_user_registration_register') }}">Sign up</a></h4>
                <form action="{{ path("fos_user_security_check") }}" method="post"
                      class="form-horizontal">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">{{
                            'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="username"
                                   name="_username" value="{{ last_username }}" required="required" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">{{
                            'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="password" id="password"
                                   name="_password" required="required" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <div class="checkbox">
                                <label for="remember_me" class=""><input
                                            type="checkbox" id="remember_me" name="_remember_me" value="on" />{{
                                    'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <input class="btn btn-default" style="width: 100%" type="submit" id="_submit"
                                   name="_submit"
                                   value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                        </div>
                        <div class="col-sm-offset-2 col-sm-8">
                            <h4>or</h4>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <div id="login_btn">Log in with Facebook</div>
                        </div>
                    </div>
                </form>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>

{% endblock %}
